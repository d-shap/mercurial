#!/bin/bash

PIDFILE=/var/run/mercurial.pid

hg() {
    arguments=( "$@" )
    fullRepositoryPath=
    for i in "${!arguments[@]}"
    do
        if [[ "${arguments[i]}" == PATH=* ]];
        then
            relativePath=$(echo "${arguments[i]}"| cut -d'=' -f 2)
            fullRepositoryPath="/mercurial/repositories/${relativePath}"
            arguments[$i]="$fullRepositoryPath"
        fi
    done
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi
    docker exec -it "$CID" "${arguments[@]}"
    if [ $? -ne 0 ];
    then
        exit 1
    fi
    case $2 in
        init)
            docker exec -it "$CID" /mercurial/createrepositoryhgrc "$fullRepositoryPath"
            ;;
    esac
}

htpasswd() {
    arguments=( "$@" )
    for i in "${!arguments[@]}"
    do
        if [ "${arguments[i]}" == "passwdfile" ];
        then
            arguments[$i]="/mercurial/users"
        fi
    done
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi
    docker exec -it "$CID" "${arguments[@]}"
}

bash() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi
    docker exec -it "$CID" sh -c "cd /mercurial/repositories && /bin/bash"
}

case $1 in
    hg)
        hg $@
        ;;
    htpasswd)
        htpasswd $@
        ;;
    bash)
        bash
        ;;
    *)
        echo "Usage: $0 (hg | htpasswd)"
        ;;
esac
