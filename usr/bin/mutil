#!/bin/bash

PIDFILE=/var/run/mercurial.pid

hg() {
    arguments=( "$@" )
    fullRepositoryPath=
    for i in "${!arguments[@]}"
    do
        if [[ "${arguments[i]}" == PATH=* ]];
        then
            relativePath=$(echo "${arguments[i]}"| cut -d'=' -f 2)
            fullRepositoryPath="/mercurial/repositories/${relativePath}"
            arguments[$i]="$fullRepositoryPath"
        fi
    done

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" "${arguments[@]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi

    case $2 in
        init)
            docker exec -it "$CID" /mercurial/scripts/createrepositoryhgrc "$fullRepositoryPath"
            if [ $? -ne 0 ];
            then
                exit 2
            fi
            ;;
    esac
}

htpasswd() {
    arguments=( "$@" )
    for i in "${!arguments[@]}"
    do
        if [ "${arguments[i]}" == "passwdfile" ];
        then
            arguments[$i]="/mercurial/users"
        fi
    done

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" "${arguments[@]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

backup() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /mercurial/scripts/backup "${arguments[@]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

restore() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /mercurial/scripts/restore "${arguments[@]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi

    echo "Move repositories/users file to the appropriate location!"
}

bash() {
    CID=$(cat "$PIDFILE")

    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" sh -c "cd /mercurial/repositories && /bin/bash"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

case $1 in
    hg)
        hg $@
        ;;
    htpasswd)
        htpasswd $@
        ;;
    backup)
        backup $@
        ;;
    restore)
        restore $@
        ;;
    bash)
        bash
        ;;
    *)
        echo "Usage: $0 (hg | htpasswd | backup | restore | bash)"
        ;;
esac
